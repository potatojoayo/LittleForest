<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.MainActivity"
    android:background="@color/background">



    <TextView
        android:id="@+id/tvLogoLittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Little"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_above="@+id/tvLogoForest"
        android:fontFamily="@font/dearsunshine"
        android:textSize="50sp"
        android:textColor="#FFFFFF"



        />


    <TextView
        android:id="@+id/tvLogoForest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forest"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:fontFamily="@font/dearsunshine"
        android:layout_above="@+id/tvCenterBox"
        android:textSize="70sp"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="40dp"

        />

    <TextView
        android:id="@+id/tvCenterBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"

        android:background="@color/background"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="10"
        android:gravity="center"

        >





        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8.5"
            >




            <TextView
                android:id="@+id/tvCenterBox_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"

                android:background="@color/background"
                />

    <TextView
        android:id="@+id/tvRegister"
        android:layout_marginTop="-10dp"
        android:layout_below="@+id/tvCenterBox_in"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/button_shape"
        android:layout_centerHorizontal="true"
        android:text="새 계정 만들기"
        android:fontFamily="@font/nixgonfonts_b"
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="@color/background"

        />

    <TextView
        android:id="@+id/tvLogin"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/tvRegister"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textSize="15dp"
        android:layout_centerHorizontal="true"
        android:text="로그인"
        android:fontFamily="@font/nixgonfonts_b"
        android:gravity="center"
        android:textColor="#FFFFFF"

        />

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>