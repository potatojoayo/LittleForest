<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.LoginActivity2"
    android:background="@color/background">


    <TextView
        android:id="@+id/logoLittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Little"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_above="@+id/tvLogoForest"
        android:fontFamily="@font/dearsunshine"
        android:textSize="50sp"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="-10dp"



        />


    <TextView
        android:id="@+id/tvLogoForest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forest"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:fontFamily="@font/dearsunshine"
        android:layout_above="@+id/tvCenterBox"
        android:textSize="70sp"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="50dp"

        />

    <TextView
        android:id="@+id/tvCenterBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/background"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="10"
        android:gravity="center"

        >





        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8.5"
            >

            <TextView
                android:id="@+id/tvCenterBox_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@color/background"
                />

    <EditText
        android:id="@+id/etEmailLogin"
        android:layout_marginTop="-35dp"
        android:layout_below="@+id/tvCenterBox_in"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/button_shape"
        android:layout_centerHorizontal="true"
        android:paddingLeft="15dp"
        android:hint="이메일"
        android:fontFamily="@font/nixgonfonts_b"
        android:gravity="center_vertical"
        android:textSize="15dp"
        android:textColor="@color/background"
        android:inputType="textEmailAddress"
        android:textCursorDrawable="@drawable/cursor_color"

        />

    <EditText
        android:id="@+id/etPasswordLogin"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/etEmailLogin"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textSize="15dp"
        android:layout_centerHorizontal="true"
        android:hint="비밀번호"
        android:fontFamily="@font/nixgonfonts_b"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:background="@drawable/button_shape"
        android:textColor="@color/background"
        android:inputType="textPassword"
        android:textCursorDrawable="@drawable/cursor_color"

        />


    <TextView
        android:id="@+id/tvForgotPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etPasswordLogin"
        android:fontFamily="@font/nixgonfonts_b"
        android:textColor="#B4FFFFFF"
        android:text="비밀번호를 잊으셨나요?"
        android:gravity="end"
        android:layout_alignParentEnd="true"

        android:layout_marginTop="10dp"
        />



    <Button
        android:id="@+id/btnLogIn"
        android:background="@drawable/button_shape_disable"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/tvForgotPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="로그인"
        android:fontFamily="@font/nixgonfonts_b"
        android:textColor="@color/disabled"


        />


    <TextView
        android:id="@+id/tvLoginOtherWay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnLogIn"
        android:fontFamily="@font/nixgonfonts_b"
        android:textColor="#FFFFFF"
        android:text="다른 방법으로 로그인 하기 "
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        />


