<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.LoginActivity"

    android:background="@color/background">




    <TextView
        android:id="@+id/tvLogoLittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Little"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_above="@+id/logo"
        android:fontFamily="@font/dearsunshine"
        android:textSize="50sp"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="-10dp"

        />


    <TextView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forest"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/tvCenter"
        android:textAlignment="center"
        android:fontFamily="@font/dearsunshine"
        android:textSize="90sp"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="90dp"

        />


    <TextView
        android:id="@+id/tvCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="10"
        android:gravity="center"

        >





    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="8.5"
        >

        <TextView
            android:id="@+id/tvCenter_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:id="@+id/loginNaver"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tvCenter_in"
        android:layout_marginTop="-40dp"
        android:visibility="gone"

        >

        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:gravity="center"
            android:text="  네이버로 로그인"
            android:textSize="15dp"
            android:fontFamily="@font/nixgonfonts_b"
            android:textColor="@color/background"
            android:background="@drawable/button_shape"
            />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="35dp"
            android:src="@drawable/naver"
            android:layout_marginLeft="15dp"

            />

    </FrameLayout>



    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/loginNaver"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/loginKakao"
        android:visibility="gone"

        >


        <TextView


            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:text="  카카오톡으로 로그인"
            android:textSize="15sp"
            android:fontFamily="@font/nixgonfonts_b"
            android:textColor="@color/background"
            android:background="@drawable/button_shape"
            android:gravity="center"


            />




        <ImageView
            android:id="@+id/kakaoLogo"
            android:layout_width="25dp"
            android:layout_height="35dp"
            android:src="@drawable/kakao"
            android:layout_marginLeft="15dp"
            />

    </FrameLayout>


    <FrameLayout
        android:id="@+id/loginFacebook"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/loginKakao"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:visibility="gone"

        >


        <TextView


            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:text="  페이스북으로 로그인"
            android:textSize="15sp"
            android:fontFamily="@font/nixgonfonts_b"
            android:textColor="@color/background"
            android:background="@drawable/button_shape"
            android:gravity="center"


            />




        <ImageView
            android:id="@+id/facebookLogo"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:src="@drawable/facebook"
            android:layout_marginLeft="20dp"
            />

    </FrameLayout>


    <TextView

        android:id="@+id/tv_register"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textSize="15sp"
        android:fontFamily="@font/nixgonfonts_b"
        android:textColor="@color/background"

        android:background="@drawable/button_shape"
        android:gravity="center"
        android:layout_below="@+id/loginFacebook"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="이메일로 가입하기"
        />

    </RelativeLayout>

    </LinearLayout>



</RelativeLayout>


