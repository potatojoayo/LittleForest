    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="10"
        android:gravity="center"

        >





        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8.5"
            >


            <TextView
                android:id="@+id/askBirthday_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"

                android:layout_marginTop="30dp"
                android:fontFamily="@font/nixgonfonts_b"
                android:text="생일이 언제인가요?"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/isNotPublic_in"
                android:layout_below="@id/askBirthday_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"

                android:layout_marginTop="10dp"
                android:fontFamily="@font/nixgonfonts_b"
                android:text="생일은 공개되지 않아요."
                android:gravity="center"
                android:textColor="#A3FFFFFF"
                android:textSize="15dp" />

    <TextView
        android:id="@+id/select_birthdayRegister"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/isNotPublic_in"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@drawable/button_shape"
        android:layout_centerHorizontal="true"
        android:paddingLeft="15dp"
        android:hint="1994 - 02 - 12"
        android:fontFamily="@font/nixgonfonts_b"
        android:gravity="center_vertical"
        android:textSize="15dp"
        android:textColor="@color/background"

        />

    <Button
        android:id="@+id/btnNext"

        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/select_birthdayRegister"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="다음"
        android:fontFamily="@font/nixgonfonts_b"
        android:textColor="@color/disabled"
        android:background="@drawable/button_shape_disable"

        />


    <DatePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date_picker"
        android:layout_marginTop="100dp"
        android:layout_below="@id/btnNext"
        android:layout_centerHorizontal="true"
        android:datePickerMode="spinner"
        android:calendarViewShown="false"
        android:background="@color/background"
        android:theme="@style/MyDatePicker"



        />

        </RelativeLayout>
